<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DatingApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mustard_yello</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="M">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="M">true</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/gilroy</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="subheadTextStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/gilroy_extra_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="bodyTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/gilroy</item>
    </style>

    <style name="screenTitleTextStyle">
        <item name="android:textSize">27sp</item>
        <item name="android:fontFamily">@font/gilroy_extra_bold</item>
    </style>

    <style name="bodyTitleStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/gilroy_extra_bold</item>
    </style>

    <style name="bodySmallTitleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/gilroy_extra_bold</item>
    </style>

    <style name="bodySubTitleStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/gilroy</item>
    </style>

    <style name="textFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="hintEnabled">false</item>
        <item name="fontFamily">@font/gilroy_extra_bold</item>
    </style>

    <style name="filledFlatButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">30dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/gilroy_extra_bold</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="upgradeButtonStyle" parent="filledFlatButtonStyle">
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">0</item>
    </style>


    <style name="circularIconButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:padding">5dp</item>
        <!--        <item name="tint">@color/button_bg_color</item>-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>